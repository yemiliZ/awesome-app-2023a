<h1>My Products</h1>
{{#unless isProductsListEmpty }}
<p>Product List</p>
<div class="grid">
  {{#each products}}
  <article class="card product-item">
    <header class="card__header">
      <h1 class="product__title">
        Great Product
      </h1>
    </header>
    <div class="card__image">
      <img
        width="150px"
        src="/images/muckupProduct.png"
        alt="product"
      />
    </div>
    <div class="card__content">
      <h2 class="product__price">
        $19.99
      </h2>
      <p class="product__description">
        A very interesting product that you need today!
      </p>
    </div>
    <div class="card__actions">
      <button class="btn">
        Add to Cart
      </button>
    </div>
  </article>
  {{/each}}
</div>
{{else}}
<h2 style="color: cornflowerblue;">No products in stock</h2>
{{/unless}}